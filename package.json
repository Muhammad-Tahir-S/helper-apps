{
  "name": "helper-apps",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Task Manager and Notes applications with a shared backend.",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:frontend": "pnpm --filter \"./frontend/**\" dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --filter \"backend\" build && pnpm --filter \"frontend\" build",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "prepare": "husky",
    "typecheck": "pnpm --filter backend typecheck && pnpm --filter frontend typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.3.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "**/*.(ts|tsx|js|jsx)": [
      "eslint --fix"
    ],
    "**/*.(ts|tsx)": [
      "bash -c 'pnpm typecheck'"
    ]
  }
}
